name="kplex daemon"
description="An NMEA-0183 Multiplexer"
command=/usr/bin/kplex
command_args="-p ${pidfile} -o mode=background ${kplex_args}"
pidfile=/var/run/kplex.pid

depend() {
	need net
	use logger
}
